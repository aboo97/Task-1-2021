<Window x:Class="Task1V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1V2"
        mc:Ignorable="d"
        Title="DDS" Height="450" Width="835">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/librarian-scaled.jpg"/>
        </Grid.Background>
        <Button x:Name="RepBtn" Content="Repalcing Books" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Width="120" Height="35" Click="RepBtn_Click"/>
        <Button x:Name="IdenBtn" Content="Identifying Areas" HorizontalAlignment="Center" Margin="0,230,0,0" VerticalAlignment="Top" Width="120" Height="35" Click="IdenBtn_Click"/>
        <Label Content="DEW DECIMAL SYSTEM" HorizontalAlignment="Left" Margin="235,61,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Freestyle Script" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
        <Button x:Name="FcnBtn" Content="Finding Call Nymbers" HorizontalAlignment="Center" Margin="0,280,0,0" VerticalAlignment="Top" Width="120" Height="35" Click="FcnBtn_Click"/>
    </Grid>
</Window>
